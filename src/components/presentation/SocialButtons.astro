---
import LinkButton from "../core/LinkButton.astro";
import Behance from "../core/icons/Behance.astro";
import Instagram from "../core/icons/Instagram.astro";
import LinkedIn from "../core/icons/LinkedIn.astro";
import Text from "../core/typography/Text.astro";
---

<div>
  <LinkButton class="link">
    <LinkedIn class="icon" />
  </LinkButton>
  <LinkButton class="link">
    <Behance class="icon" />
  </LinkButton>
  <LinkButton class="link">
    <Instagram class="icon" />
  </LinkButton>
</div>

<style>
  div {
    width: 100%;
    display: flex;
    justify-content: space-around;
    margin-top: auto;
  }
  .link {
    padding: 10px;
    display: flex;
    align-items: center;
    justify-content: center;
    color: var(--color-brand-gray);
    box-shadow: 0px 4px 4px rgba(0, 0, 0, 0.25);
    background-color: white;
    transition: background-color 0.3s;
  }
  .link:hover:nth-child(1) {
    background-color: var(--color-brand-blue);
  }
  .link:hover:nth-child(2) {
    background-color: var(--color-brand-yellow);
  }
  .link:hover:nth-child(3) {
    background-color: var(--color-brand-purple);
  }
  .icon {
    width: 24px;
  }
</style>
