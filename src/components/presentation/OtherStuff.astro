---
import TallBox from "./TallBox.astro";
import Clip from "./Clip.astro";
const { class: className } = Astro.props;
---

<div class:list={[className, "wrapper"]}>
  <TallBox class="box" />
  <Clip class="clip" />
  <div class="content"><slot /></div>
</div>

<style>
  .clip {
    color: var(--color-brand-yellow);
    position: absolute;
    left: 20%;
    top: -60px;
    width: 100px;
  }
  .wrapper {
    position: absolute;
    transform-origin: right top;
    transform: rotate(-10deg);
  }
  .box {
    color: #f9f9f9;
    width: 100%;
    height: 100%;
  }
  .content {
    position: absolute;
    width: 100%;
    height: 100%;
    left: 0;
    top: 0;
    padding: 25px 10px 10px 10px;
  }
</style>
