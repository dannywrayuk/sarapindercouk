---
import WideBox from "./WideBox.astro";
import Clip from "./Clip.astro";
const { class: className } = Astro.props;
---

<div class:list={[className, "wrapper"]}>
  <Clip class="clip" />
  <WideBox class="box" />
  <div class="content"><slot /></div>
</div>

<style>
  .clip {
    color: var(--color-brand-green);
    position: absolute;
    left: 37.5%;
    top: -60px;
    width: 100px;
  }
  .wrapper {
    position: absolute;
  }
  .box {
    color: #f9f9f9;
    width: 100%;
    height: 100%;
  }
  .content {
    position: absolute;
    width: 100%;
    height: 100%;
    left: 0;
    top: 0;
    padding: 10px;
  }
</style>
