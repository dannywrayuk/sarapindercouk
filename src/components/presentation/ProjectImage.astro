---
import FixedAspectImage from "../core/FixedAspectImage.astro";
const { src, hoverColor } = Astro.props;
const hoverColors = ["blue", "pink", "purple", "yellow", "green"];
const hoverColorVar = hoverColors.includes(hoverColor)
  ? `var(--color-brand-${hoverColor})`
  : "var(--color-brand-pink)";
---

<div class="projectImage">
  <FixedAspectImage height="82%" src={src} />
</div>

<style define:vars={{ hoverColor: hoverColorVar }}>
  .projectImage {
    width: 47%;
    margin-bottom: 5%;
    border-radius: 30px;
    overflow: hidden;
    box-shadow: -10px 10px 0px 0px var(--hoverColor);
    transform: translate(5px, -5px);
    transition: 0.3s;
  }
  .projectImage:hover {
    transform: translate(5px, -5px) scale(1.01);
  }
</style>
