---
import Pattern from "./Pattern.astro";
const { class: className } = Astro.props;
---

<svg class={className}>
  <defs>
    <pattern
      id="background"
      x="0"
      y="0"
      width="1920"
      height="1080"
      patternUnits="userSpaceOnUse"
    >
      <Pattern />
    </pattern>
  </defs>
  <rect width="100%" height="100%" fill="url(#background)"></rect>
</svg>
