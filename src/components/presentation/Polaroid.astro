---
import FixedAspectImage from "../core/FixedAspectImage.astro";
import Text from "../core/typography/Text.astro";
import WithTape from "./WithTape.astro";
---

<WithTape class="tapeContainer">
  <div class="card">
    <FixedAspectImage class="image" size="92%" src="/sara.png" />
    <div class="text">
      <Text>me in cat form</Text>
    </div>
  </div>
</WithTape>

<style>
  .card {
    background-color: white;
    outline: 1px solid black;
    border-radius: 1px;
    width: 100%;
    display: flex;
    flex-direction: column;
    align-items: center;
    box-shadow: 0px 4px 4px rgba(0, 0, 0, 0.25);
  }
  .text {
    text-align: center;
    margin: 8% 0;
    font-size: 1.5rem;
  }
  .image {
    margin-top: 4%;
  }
  .tapeContainer {
    width: 100%;
  }
</style>
